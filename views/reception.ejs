<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/css/main.css">


<div class="container" style="padding-top: 5rem; margin-bottom: 5vh;">

    <div style="padding-bottom: 5rem;"><a href="/" class="btn btn-outline-primary" style="float: right">Log Out</a></div>
    <div class="page-heading" style="padding-bottom: 4rem;">
        <h1 style="float: left">All patients</h1>
        <a href="/reception/register" class="btn btn-outline-primary" style="float: right">Add a pattient</a>
    </div>

    
    <table style="width:100%">
        <tr>
            <th>National ID</th>
            <th>Patient Name</th>

        </tr>
    
        <% for(var i = 0; i < patients.length; i++) {%>
            <tr>
                <td style="font-weight: bold"><%= patients[i].NID %></td>
                <td style="font-weight: bold"><%= patients[i].firstname %> <%= patients[i].lastname %></td>



            </tr>
        <% }%>
    
    </table>
</div>