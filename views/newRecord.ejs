<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/css/main.css">

<div class="container" style="margin-top: 10vh; margin-bottom: 5vh;">

    <h1 style="margin-bottom: 5rem;">
        New Patient Record
    </h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
            <form role="form" method="post" action="/patients/newRecord/<%= patient._id %>">

                <div class="control-group" style="display: none;">
                    <div class="form-group floating-label-form-group controls">
                        <label>patient</label>
                        <input type="text" name="patient"  class="form-control" readonly value="<%= patient._id %>" >
                    </div>
                </div>

                <div class="control-group" >
                    <div class="form-group floating-label-form-group controls">
                        <label>Hospital Name</label>
                        <input type="text" name="hospital"  class="form-control" readonly value="Croix du Sude" >
                    </div>
                </div>

                <div class="control-group" style="display: none;">
                    <div class="form-group floating-label-form-group controls">
                        <label> Doctor Name </label>
                        <input type="text" name="doctor" value="Kalisa">
                    </div>
                </div>

                <div class="control-group" >
                    <div class="form-group floating-label-form-group controls">
                        <label>Patient illiness details</label>
                        <textarea name="details"  cols="75" rows="10" type="textarea" ></textarea>
                        <div id="content2"></div>
                    </div>
                </div>
        
          

           

            <div class="form-group my-4 text-center">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
        <div class="form-group my-4 text-center">
            <a href="/patients">
                <button class="btn btn-danger">Back</button>
            </a>
        </div>
    </div>
</div>
</div>